
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.0.0.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/livro.js"></script>



<div class="container">
    <h2>Livraria</h2><br /><br />
    <div class="vamosver">
        <input type="text" style="display:inline-block; vertical-align:middle;"  class="col-sm-3 form-control" id="BookName" placeholder="Nome do Livro" />
        <button type="button" style="inline-block; vertical-align:middle;" class="col-sm-2 btn btn-primary" id="btnBuscar" onclick="SearchByName();">Buscar</button>
        <button type="button" style="display:inline-block; vertical-align:middle; float:right;" class="col-sm-3 btn btn-success" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Adicionar Novo Livro</button><br /><br />
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Autor
                </th>
                <th>
                    Editora
                </th>
                <th>
                    Ano de Publicação
                </th>

                <th>
                    Ação
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel"></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="LivroId">ID</label>
                        <input type="text" class="col-sm-12 form-control" id="LivroId" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Nome</label>
                        <input type="text" class="col-sm-12 form-control" id="Name" placeholder="Nome" />
                    </div>
                    <div class="form-group">
                        <label for="Autor">Autor</label>
                        <input type="text" class="col-sm-12 form-control" id="Autor" placeholder="Autor" />
                    </div>
                    <div class="form-group">
                        <label for="Editora">Editora</label>
                        <input type="text" class="col-sm-12 form-control" id="Editora" placeholder="Editora" />
                    </div>
                    <div class="form-group">
                        <label for="anoPublicacao">Ano de Publicação</label>
                        <input type="text" class="col-sm-12 form-control" id="anoPublicacao" placeholder="Ano de Publicação" />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Adicionar</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Atualizar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

